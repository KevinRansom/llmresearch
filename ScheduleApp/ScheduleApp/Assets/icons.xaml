<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Common icon styling -->
  <SolidColorBrush x:Key="IconBrush" Color="#2B2B2B"/>
  <Pen x:Key="IconPen" Brush="{StaticResource IconBrush}" Thickness="2"
       StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>

  <!-- Plus -->
  <DrawingImage x:Key="IconAdd">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Geometry="M10,2 L10,18 M2,10 L18,10"
                         Pen="{StaticResource IconPen}"/>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <!-- Minus -->
  <DrawingImage x:Key="IconRemove">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Geometry="M2,10 L18,10"
                         Pen="{StaticResource IconPen}"/>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <!-- Generate (Play) -->
  <DrawingImage x:Key="IconGenerate">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="{StaticResource IconBrush}"
                         Geometry="M6,4 L16,10 L6,16 Z"/>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <!-- Printer -->
  <DrawingImage x:Key="IconPrint">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="{StaticResource IconBrush}"
                         Geometry="M6,2 H14 V6 H6 Z"/>
        <GeometryDrawing Brush="{StaticResource IconBrush}"
                         Geometry="M4,6 H16 V10 H20 V19 H0 V10 H4 Z"/>
        <GeometryDrawing Brush="White"
                         Geometry="M4,10 H16 V18 H4 Z"/>
        <GeometryDrawing Geometry="M6,12 H14 M6,14 H14 M6,16 H12">
          <GeometryDrawing.Pen>
            <Pen Brush="{StaticResource IconBrush}" Thickness="1"/>
          </GeometryDrawing.Pen>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <!-- PDF (Document with folded corner) -->
  <DrawingImage x:Key="IconPdf">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Brush="White"
                         Geometry="M4,1 L12,1 L16,5 L16,19 L4,19 Z"/>
        <GeometryDrawing Geometry="M4,1 L12,1 L16,5 L16,19 L4,19 Z">
          <GeometryDrawing.Pen>
            <Pen Brush="{StaticResource IconBrush}" Thickness="1.5"/>
          </GeometryDrawing.Pen>
        </GeometryDrawing>
        <GeometryDrawing Brush="#EEE" Geometry="M12,1 L12,5 L16,5 Z"/>
        <GeometryDrawing Geometry="M12,1 L12,5 L16,5">
          <GeometryDrawing.Pen>
            <Pen Brush="{StaticResource IconBrush}" Thickness="1"/>
          </GeometryDrawing.Pen>
        </GeometryDrawing>
        <GeometryDrawing Geometry="M6,8 H14 M6,10 H14 M6,12 H12">
          <GeometryDrawing.Pen>
            <Pen Brush="{StaticResource IconBrush}" Thickness="1"/>
          </GeometryDrawing.Pen>
        </GeometryDrawing>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <!-- Icon Button Style -->
  <Style x:Key="IconButton" TargetType="Button">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border Background="Transparent" BorderBrush="{x:Null}"
                  Padding="8,4" CornerRadius="4">
            <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="Foreground" Value="{StaticResource IconBrush}"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Padding" Value="4,2"/>
    <Setter Property="Margin" Value="2"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="#F0F0F0"/>
        <Setter Property="Foreground" Value="#000000"/>
      </Trigger>
      <Trigger Property="IsPressed" Value="True">
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="Foreground" Value="#000000"/>
      </Trigger>
    </Style.Triggers>
  </Style>

</ResourceDictionary>