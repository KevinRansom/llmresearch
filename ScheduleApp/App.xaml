<Application x:Class="ScheduleApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <!-- Brushes -->
      <SolidColorBrush x:Key="BrushCoverage" Color="#FFEAA84C" />
      <SolidColorBrush x:Key="BrushBreak"    Color="#FF6EC5FF" />
      <SolidColorBrush x:Key="BrushLunch"    Color="#FFA4E27E" />
      <SolidColorBrush x:Key="BrushIdle"     Color="#FFDDDDDD" />

      <!-- Styles -->
      <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="HorizontalAlignment" Value="Left" />
      </Style>
      <Style TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="CanUserAddRows" Value="False" />
        <Setter Property="CanUserDeleteRows" Value="False" />
        <Setter Property="CanUserReorderColumns" Value="False" />
        <Setter Property="CanUserSortColumns" Value="False" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="SelectionUnit" Value="FullRow" />
      </Style>
      <Style TargetType="TabItem">
        <Setter Property="Padding" Value="12,6"/>
      </Style>
      <Style x:Key="MonospaceText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
      </Style>

      <!-- Icons (inlined to avoid lookup issues) -->
      <SolidColorBrush x:Key="IconBrush" Color="#2B2B2B"/>
      <Pen x:Key="IconPen" Brush="{StaticResource IconBrush}" Thickness="2"
           StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>

      <DrawingImage x:Key="IconAdd">
        <DrawingImage.Drawing>
          <DrawingGroup>
            <GeometryDrawing Geometry="M10,2 L10,18 M2,10 L18,10"
                             Pen="{StaticResource IconPen}"/>
          </DrawingGroup>
        </DrawingImage.Drawing>
      </DrawingImage>

      <DrawingImage x:Key="IconRemove">
        <DrawingImage.Drawing>
          <DrawingGroup>
            <GeometryDrawing Geometry="M2,10 L18,10"
                             Pen="{StaticResource IconPen}"/>
          </DrawingGroup>
        </DrawingImage.Drawing>
      </DrawingImage>

      <DrawingImage x:Key="IconGenerate">
        <DrawingImage.Drawing>
          <DrawingGroup>
            <GeometryDrawing Brush="{StaticResource IconBrush}"
                             Geometry="M6,4 L16,10 L6,16 Z"/>
          </DrawingGroup>
        </DrawingImage.Drawing>
      </DrawingImage>

      <DrawingImage x:Key="IconPrint">
        <DrawingImage.Drawing>
          <DrawingGroup>
            <GeometryDrawing Brush="{StaticResource IconBrush}"
                             Geometry="M6,2 H14 V6 H6 Z"/>
            <GeometryDrawing Brush="{StaticResource IconBrush}"
                             Geometry="M4,6 H16 V10 H20 V19 H0 V10 H4 Z"/>
            <GeometryDrawing Brush="White"
                             Geometry="M4,10 H16 V18 H4 Z"/>
            <GeometryDrawing Geometry="M6,12 H14 M6,14 H14 M6,16 H12">
              <GeometryDrawing.Pen>
                <Pen Brush="{StaticResource IconBrush}" Thickness="1"/>
              </GeometryDrawing.Pen>
            </GeometryDrawing>
          </DrawingGroup>
        </DrawingImage.Drawing>
      </DrawingImage>

      <DrawingImage x:Key="IconPdf">
        <DrawingImage.Drawing>
          <DrawingGroup>
            <GeometryDrawing Brush="White"
                             Geometry="M4,1 L12,1 L16,5 L16,19 L4,19 Z"/>
            <GeometryDrawing Geometry="M4,1 L12,1 L16,5 L16,19 L4,19 Z">
              <GeometryDrawing.Pen>
                <Pen Brush="{StaticResource IconBrush}" Thickness="1.5"/>
              </GeometryDrawing.Pen>
            </GeometryDrawing>
            <GeometryDrawing Brush="#EEE" Geometry="M12,1 L12,5 L16,5 Z"/>
            <GeometryDrawing Geometry="M12,1 L12,5 L16,5">
              <GeometryDrawing.Pen>
                <Pen Brush="{StaticResource IconBrush}" Thickness="1"/>
              </GeometryDrawing.Pen>
            </GeometryDrawing>
            <GeometryDrawing Geometry="M6,8 H14 M6,10 H14 M6,12 H12">
              <GeometryDrawing.Pen>
                <Pen Brush="{StaticResource IconBrush}" Thickness="1"/>
              </GeometryDrawing.Pen>
            </GeometryDrawing>
          </DrawingGroup>
        </DrawingImage.Drawing>
      </DrawingImage>

      <!-- If you later want an external file, re-add a merge and remove the inlined icons:
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Assets/icons.xaml" />
      </ResourceDictionary.MergedDictionaries>
      -->
    </ResourceDictionary>
  </Application.Resources>
</Application>
